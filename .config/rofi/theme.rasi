* {
    bg-col:  #303446;
    bg-col-light: #51576d;
    border-col: #303446;
    selected-col: #414559;
    primary: #ea999c;
    fg-col: #c6d0f5;
    grey: #737994;

    width: 600;
    font: "Noto Sans 11";
}

element-text, element-icon, mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 340px;
    border-color: @border-col;
    background-color: @bg-col;
    border-radius: 20px;
}

mainbox {
    background-color: @bg-col;
}

inputbar {
    children: [prompt, entry];
    background-color: @bg-col;
    border-radius: 5px;
}

prompt {
    background-color: @primary;
    padding: 6px;
    text-color: @bg-col;
    border-radius: 3px;
    margin: 20px 0px 5px 20px;
}

entry {
    padding: 6px;
    margin: 20px 0px 0px 10px;
    text-color: @fg-col;
    background-color: @bg-col;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 0px 10px 0px 10px;
    lines: 5;
    background-color: @bg-col;
}

element {
    padding: 8px;
    margin: 5px 0px 5px 0px;
    background-color: @bg-col;
    text-color: @fg-col;
    border-radius: 15px;
}

element-icon {
    size: 25px;
}

element selected {
    background-color:  @selected-col;
}

mode-switcher {
    spacing: 0;
}

button {
    padding: 10px;
    background-color: @bg-col-light;
    text-color: @grey;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
    background-color: @bg-col;
    text-color: @primary;
}

message {
    background-color: @bg-col-light;
    margin: 2px;
    padding: 2px;
    border-radius: 5px;
}

textbox {
    padding: 6px;
    margin: 20px 0px 0px 20px;
    text-color: @primary;
    background-color: @bg-col-light;
}
