{
	"layer": "top",
	"modules-left": ["custom/distro", /*"hyprland/workspaces",*/ "tray"],
	"modules-right": ["clock", "memory", "cpu", "custom/reboot", "custom/shutdown"],
    "hyprland/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "on-click": "activate",
        "format": "{icon}"
    },
    "tray": {
		"icon-size": 18,
		"spacing": 10
	},
    "clock": {
        "format": " {:%R}"
    },
    "cpu": {
        "interval": 2,
        "format": " {}%",
        "max-length": 10
    },
    "memory": {
        "interval": 20,
        "format": "  {}%",
        "max-length": 10
    },
    "custom/distro": {
        "format": "",
    },
    "custom/reboot": {
        "format": "",
        "on-click": "reboot",
    },
    "custom/shutdown": {
        "format": "⏻",
        "on-click": "shutdown now",
    }
}
